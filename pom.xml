<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>com.comvai.maven</groupId>
        <artifactId>comvai-gae-app</artifactId>
        <version>1.10</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.ctoolkit.bulkloader</groupId>
    <artifactId>bulk-loader</artifactId>
    <packaging>war</packaging>
    <version>0.20-SNAPSHOT</version>

    <scm>
        <connection>scm:git:[fetch=]git@github.com:turnonline/ctoolkit-bulkloader.git</connection>
        <developerConnection>scm:git:[push=]git@github.com:turnonline/ctoolkit-bulkloader.git</developerConnection>
        <url>https://github.com/turnonline/ctoolkit-bulkloader</url>
    </scm>

    <issueManagement>
        <url>https://github.com/turnonline/ctoolkit-bulkloader/issues</url>
    </issueManagement>

    <developers>
        <developer>
            <name>Aurel Medvegy</name>
            <id>medvegy</id>
            <email>medvegy@comvai.com</email>
        </developer>
        <developer>
            <name>Ondrej Jaura</name>
            <id>jaura</id>
            <email>ondrej.jaura@gmail.com</email>
        </developer>
    </developers>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <!-- Enabling this option results in of additional JAR file with classifier classes
                     along with standard WAR file and may be used as standard dependency. -->
                    <attachClasses>true</attachClasses>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <configuration>
                    <skip>${skip.gwt.build}</skip>
                    <deploy>${project.build.directory}/deploy</deploy>
                    <logLevel>INFO</logLevel>
                    <extraJvmArgs>-Xmx512m</extraJvmArgs>
                    <style>OBFUSCATED</style>
                </configuration>
                <executions>
                    <execution>
                        <configuration>
                            <module>org.ctoolkit.bulkloader.BulkLoader</module>
                        </configuration>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.google.appengine</groupId>
                <artifactId>appengine-maven-plugin</artifactId>
                <configuration>
                    <!--Do not store the administrator sign-in credentials.-->
                    <noCookies>true</noCookies>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
