        <gwt-plugin.version>2.6.1</gwt-plugin.version>
        <skip.gwt.build>false</skip.gwt.build>
    </properties>

    <profiles>
        <profile>
            <!-- profile to build backend only -->
            <id>be</id>
            <properties>
                <skip.gwt.build>true</skip.gwt.build>
            </properties>
        </profile>
